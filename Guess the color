import random
color=['Orange','White','Black','Blue','Red']
ncolor=color[random.randint(0,4)]
for i in range(0,3):
    ucolor=color[int(input("Enter your choice btw 0-4:"))]
    if (ucolor==ncolor):
        print("Hurray! you guessed it right ")
        break;
else:
    print("Better luck next time!")
