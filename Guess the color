import random
l=['black', 'blue', 'red', 'black', 'purple']
for i in range(0,3):
    u=int(input("Enter your guess:"))
    if(u>4):
        print("Enter the valid input: ")
    else:
        if(l[u]==l[random.randint(0, 4)]):
         print("Hurray,You guessed it right")
         break;
else:
    print("Better luck next time")
