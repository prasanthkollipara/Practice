import random
l=['black', 'blue', 'red', 'green', 'purple']
for i in range(0,3):
    u=int(input("Enter your guess:"))
    if(u>5):
        print("Enter a valid input: ")
        break;
    else:
        y= random.randint(1, 4)
        if(l[u]==l[y]):
         print("Hurray,You guessed it right")
         break;
else:
    print("Better luck next time")
    print("The correct number was", y)
